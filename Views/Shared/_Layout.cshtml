                <h1 class="sitename">Lingo Courses</h1>
            </a>
            <nav id="navmenu" class="navmenu">
                <ul>
                    <li class="nav-item active">
                        <a class="nav-link" href="#home">@localizer["Home"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#about_us">@localizer["About Us"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#about_instructor">@localizer["About Instructor"]</a>
